{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": false 
    },
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": ["http://localhost:4280"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entries": [
  {
      "name": "churnLabels",
      "path": "/api/churnLabels",
      "method": "GET",
      "handler": "churnLabels",
      "database": "SQLConnection",
      "query": {
        "select": "SELECT * FROM dbo.churn_labels WHERE HSHD_NUM = @HSHD_NUM",
        "parameters": [
          {
            "name": "HSHD_NUM",
            "type": "int",
            "required": true
          }
        ]
      }
    },
    {
      "name": "combinedData",
      "path": "/api/combinedData",
      "method": "GET",
      "handler": "combinedData",
      "database": "SQLConnection",
      "query": {
        "select": "SELECT * FROM dbo.combined_data WHERE HSHD_NUM = @HSHD_NUM",
        "parameters": [
          {
            "name": "HSHD_NUM",
            "type": "int",
            "required": true
          }
        ]
      }
    }
  ]
}